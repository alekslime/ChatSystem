<Window x:Class="ChatLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chat Launcher" Height="200" Width="300"
        WindowStartupLocation="CenterScreen">
    <StackPanel Margin="20">
        <TextBlock Text="Number of chat clients to launch:"/>
        <TextBox x:Name="txtNumber" Margin="0,10" Text="3"/>
        <Button Content="Launch Clients" Click="LaunchClients_Click"/>
    </StackPanel>
</Window>

