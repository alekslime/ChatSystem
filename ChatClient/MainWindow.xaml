<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dark Chat" Height="600" Width="900"
        Background="#1E1E1E">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Connection Panel -->
        <Border Grid.Row="0" 
                Background="#2D2D2D" 
                CornerRadius="4" 
                Padding="10"
                Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Username:" 
                          Foreground="White" 
                          VerticalAlignment="Center" 
                          Margin="0,0,10,0"/>
                <TextBox x:Name="txtUsername" 
                         Width="200" 
                         Margin="0,0,10,0"
                         Background="#404040"
                         Foreground="White"
                         BorderThickness="0"
                         Padding="5"/>
                <Button x:Name="btnConnect" 
                        Content="Connect" 
                        Width="100"
                        Click="btnConnect_Click"
                        Background="#007ACC"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="5"/>
            </StackPanel>
        </Border>

        <!-- Chat Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>

            <!-- Messages -->
            <Border Background="#2D2D2D" 
                    CornerRadius="4" 
                    Margin="0,0,10,0">
                <ScrollViewer x:Name="scrollViewer">
                    <TextBox x:Name="txtChat"
                             IsReadOnly="True"
                             TextWrapping="Wrap"
                             Background="Transparent"
                             Foreground="White"
                             BorderThickness="0"
                             Padding="10"/>
                </ScrollViewer>
            </Border>

            <!-- Users List -->
            <Border Grid.Column="1" 
                    Background="#2D2D2D" 
                    CornerRadius="4">
                <DockPanel Margin="10">
                    <TextBlock DockPanel.Dock="Top" 
                             Text="Online Users" 
                             Foreground="White"
                             FontWeight="Bold" 
                             Margin="0,0,0,10"/>
                    <ListBox x:Name="lstUsers"
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="0"/>
                </DockPanel>
            </Border>
        </Grid>

        <!-- Message Input -->
        <Border Grid.Row="2" 
                Background="#2D2D2D" 
                CornerRadius="4" 
                Padding="10"
                Margin="0,10,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="txtMessage" 
                         Margin="0,0,10,0"
                         Background="#404040"
                         Foreground="White"
                         BorderThickness="0"
                         Padding="5"
                         KeyDown="txtMessage_KeyDown"/>

                <Button x:Name="btnSend" 
                        Grid.Column="1"
                        Content="Send" 
                        Width="100"
                        Click="btnSend_Click"
                        Background="#007ACC"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="5"
                        IsEnabled="False"/>
            </Grid>
        </Border>
    </Grid>
</Window>

